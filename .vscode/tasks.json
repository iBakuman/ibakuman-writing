// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
// "$tsc-watch" definition: https://github.com/microsoft/vscode/blob/main/extensions/typescript-language-features/package.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev-build",
            "detail": "Fast build for development time.",
            "type": "npm",
            "script": "dev-build",
            "isBackground": false,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "PATH": "${env:PATH}:${env:HOME}/.nvm/versions/node/v16.19.1/bin"
                }
            }
        },
        {
            "label": "echo-env",
            "type": "shell",
            "command": "echo -n 'shell: ${env:PATH}\r\nworkspaceFolder: ${workspaceFolder}\r\nexecPath: ${execPath}'",
            "options": {
                "env": {
                    "PATH": "${env:PATH}:${env:HOME}/.nvm/versions/node/v16.19.1/bin"
                }
            }
        }
    ]
}
